<div class="col-md-4">
  <div class="card mb-4 shadow-sm" data-id="<%= portfolio.id %>">
    
   <!-- 
    <%= image_tag portfolio_img(portfolio.thumb_image, 'thumb'), width: '100%' %>
   
    --> 
    
    <div class="card-body">
      <p class="card-text">
        <span><%= link_to portfolio.title, portfolio_show_path(portfolio) %></span>
        <%= portfolio.subtitle %></p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
          <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
        </div>
      </div>
    </div>
  </div>
</div>

