<%= form_for(@portfolio) do |form| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.file_field :main_image %>
      </div>

      <div class="form-group">
        <%= form.file_field :thumb_image %>
      </div>

    </div>

  
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, class: 'form-control', rows: 10 %>
      </div>
    </div>
  </div>

  <hr>
  
  <div class="col-md-12">
      <h2>Technologies Used</h2>
    <div>
        <%= form.fields_for :technologies do |tech| %>
      <div>
        <%= tech.label :name %>
        <%= tech.text_field :name, class: 'form-control' %>
      </div>
      <% end %>
    </div>
    
    <br></br>

    <div class="form-group">
      <%= form.submit 'Save Portfolio Items', class: 'btn btn-primary' %>
    </div>
  </div>
  
<% end %>