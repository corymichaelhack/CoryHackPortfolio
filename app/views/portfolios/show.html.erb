<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag("#{portfolio_img(@portfolio.main_image, 'main')}" , width: '100%') %>
    </div>
    <div class="col-md-5">
      <h1><%= @portfolio.title %></h1>

      <em><%= @portfolio.subtitle %></em>

      <p><%= @portfolio.body %></p>

      <h3>Technologies Used:</h3>

      <% @portfolio.technologies.each do |tech| %>
        <p><%= tech.name %></p>
      <% end %>
      
      <% if logged_in?(:site_admin) %>
        <div class="col-md-12">
          <%= link_to 'Edit Item', edit_portfolio_path(@portfolio), class: 'btn btn-warning' %>
        </div>
      <% end %>
    </div>
  </div>
</div>





