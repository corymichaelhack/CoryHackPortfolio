<!-- partial for data collection -->

<div class="blog-post">

  <h2 class="blog-post-title"><%= link_to blog.title.upcase, blog %></h2>

  <p class="post-meta">Published <%= distance_of_time_in_words(blog.created_at, Time.now)%> ago <a href="#">Name of Blogger</a>
  </p>

  <%= render partial: 'blogs/admin_actions', locals: { blog: blog } %>

  

  <p>
    <%= blog.body %> 
  </p>

</div>
