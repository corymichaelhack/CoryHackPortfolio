<div class="app-card-container">
  <div class="card about-card">
    <h1>About Me</h1>

    <hr>

    <div class="row">
      <div class="col-md-4">
        <%= image_tag "profile.jpg", width: 200, alt: "profile image", class: 'profile-img' %>
        
        <div class="skills">
          <div class="skill">
            <% @skills.each do |skill| %>
            <h4><%= skill.title %></h4>
            <div class="progress">
              <div class="progress-bar progress-bar-striped bg-warning"
                    role="progressbar"
                    aria-valuenow="<%= skill.percent_utilized %>"
                    aria-valuemax="100"
                    style="width: <%= skill.percent_utilized %>% " 

              ></div>
              
            </div>
          <% end %>
          </div>
        </div>
      </div><!-- col-md-4 -->

      <div class="col-md-8">
        <p>
          Text about myself
        </p>

        <p>
          more text about myself
        </p>

        <p>
          <button class="btn btn-primary" 
                  type="button" 
                  data-toggle="collapse" 
                  data-target="#jobHistory" 
                  aria-expanded="false" 
                  aria-controller="jobHistory">
            Job History
          </button>

          <button class="btn btn-primary" 
                  type="button" 
                  data-toggle="collapse" 
                  data-target="#education" 
                  aria-expanded="false" 
                  aria-controller="education">
            Education
          </button>

        </p>

        <p>
          <!-- Job history tab -->
          <div class="collapse" id="jobHistory">
            <div class="card card-block item-card">
              Job 1
            </div>
            <div class="card card-block item-card">
              Job 2
            </div>
            <div class="card card-block item-card">
              Job 3
            </div>
          </div>
          
          <!-- Education tab -->
          <div class="collapse" id="education">
            <div class="card card-block item-card">
              School 1
            </div>
            <div class="card card-block item-card">
              School 2
            </div>
            <div class="card card-block item-card">
              School 3
            </div>
          </div>
        </p>
      </div><!-- col-md-8 -->
    </div>
  </div>
</div>




